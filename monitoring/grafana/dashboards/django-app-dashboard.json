{
  "dashboard": {
    "title": "Puddle Django Application Metrics",
    "tags": ["django", "puddle", "application"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Request Rate",
        "targets": [
          {
            "expr": "rate(django_http_requests_total_by_view_transport_method_total[5m])",
            "legendFormat": "{{view}} - {{method}}"
          }
        ],
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "title": "Response Time (95th percentile)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
            "legendFormat": "{{view}}"
          }
        ],
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "title": "Active Requests",
        "targets": [
          {
            "expr": "django_http_requests_in_progress_total",
            "legendFormat": "Active Requests"
          }
        ],
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8}
      },
      {
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(django_http_requests_total_by_view_transport_method_total{status=~\"5..\"}[5m])",
            "legendFormat": "Errors"
          }
        ],
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8}
      },
      {
        "title": "Database Connections",
        "targets": [
          {
            "expr": "django_db_connections_total",
            "legendFormat": "{{alias}}"
          }
        ],
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "rate(django_cache_get_hits_total[5m]) / (rate(django_cache_get_hits_total[5m]) + rate(django_cache_get_misses_total[5m]))",
            "legendFormat": "Hit Rate"
          }
        ],
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ],
    "schemaVersion": 16,
    "version": 1
  }
}
