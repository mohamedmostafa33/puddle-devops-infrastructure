{
  "dashboard": {
    "title": "PostgreSQL RDS Metrics",
    "tags": ["postgresql", "rds", "database"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Database Connections",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections"
          }
        ],
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "title": "Transaction Rate",
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit[5m])",
            "legendFormat": "Commits"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback[5m])",
            "legendFormat": "Rollbacks"
          }
        ],
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "title": "Query Performance",
        "targets": [
          {
            "expr": "rate(pg_stat_statements_mean_time_seconds[5m])",
            "legendFormat": "Avg Query Time"
          }
        ],
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "title": "Cache Hit Ratio",
        "targets": [
          {
            "expr": "pg_stat_database_blks_hit / (pg_stat_database_blks_hit + pg_stat_database_blks_read)",
            "legendFormat": "Cache Hit %"
          }
        ],
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "title": "Database Size",
        "targets": [
          {
            "expr": "pg_database_size_bytes",
            "legendFormat": "{{datname}}"
          }
        ],
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16}
      },
      {
        "title": "Deadlocks",
        "targets": [
          {
            "expr": "rate(pg_stat_database_deadlocks[5m])",
            "legendFormat": "Deadlocks/sec"
          }
        ],
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16}
      }
    ],
    "schemaVersion": 16,
    "version": 1
  }
}
